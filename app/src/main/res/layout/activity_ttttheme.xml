<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tictactoe.TTTtheme">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rl"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true">

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:src="@drawable/pencil"
      android:id="@+id/imageView5"
      android:layout_above="@+id/imageView10"
      android:layout_alignParentStart="true" />
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:src="@drawable/pencil"
      android:id="@+id/imageView"
      android:layout_above="@+id/imageView15"
      android:layout_alignParentStart="true"
      android:layout_marginStart="17dp" />
  <ImageView
      android:layout_width="30dp"
      android:layout_height="300dp"
      android:src="@drawable/pencill"
      android:id="@+id/imageView2"
      android:layout_marginTop="86dp"
      android:layout_alignParentTop="true"
      android:layout_toStartOf="@+id/imageView6" />
  <ImageView
      android:layout_width="30dp"
      android:layout_height="300dp"
      android:src="@drawable/pencill"
      android:id="@+id/imageView1"
      android:layout_marginStart="17dp"
      android:layout_alignBottom="@+id/imageView2"
      android:layout_toEndOf="@+id/imageView6" />

  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_above="@+id/imageView"
      android:layout_toStartOf="@+id/imageView2" />
  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:layout_alignTop="@+id/imageView4"
      android:layout_centerHorizontal="true" />
  <ImageView
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:id="@+id/imageView3"
      android:layout_alignTop="@+id/imageView6"
      android:layout_toEndOf="@+id/imageView1" />
  <ImageView
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:id="@+id/imageView7"
      android:layout_above="@+id/imageView5"
      android:layout_toStartOf="@+id/imageView2" />
  <ImageView
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:id="@+id/imageView8"
      android:layout_below="@+id/imageView"
      android:layout_toStartOf="@+id/imageView1" />
  <ImageView
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:id="@+id/imageView15"
      android:layout_alignTop="@+id/imageView7"
      android:layout_toEndOf="@+id/imageView1" />
  <ImageView
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:id="@+id/imageView9"

      android:layout_alignBottom="@+id/imageView2"
      android:layout_toStartOf="@+id/imageView2" />
  <ImageView
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:id="@+id/imageView10"
      android:layout_alignBottom="@+id/imageView1"
      android:layout_toEndOf="@+id/imageView2" />
  <ImageView
      android:layout_width="80dp"
      android:layout_height="80dp"
      android:id="@+id/imageView11"
      android:layout_alignBottom="@+id/imageView1"
      android:layout_toEndOf="@+id/imageView1" />
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_below="@+id/imageView2"
     android:layout_alignParentStart="true"
     android:layout_marginTop="46dp"
     android:id="@+id/linearLayout">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Player 1"
       android:layout_weight="1"
       android:textSize="20dp"
       android:textColor="#5d31cf"
       android:textStyle="bold"
       android:id="@+id/textView2"
       android:layout_below="@+id/imageView12"
       android:layout_alignStart="@+id/imageView4" />

   <ImageView
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:src="@drawable/eraser"
       android:layout_weight="1"
       android:layout_below="@+id/textView2"
       android:layout_alignEnd="@+id/textView2"
       android:layout_marginEnd="20dp" />
   <View
       android:layout_width="100dp"
       android:layout_height="20dp"/>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Player 2"
       android:textSize="20dp"
       android:layout_weight="1"
       android:textColor="#5d31cf"
       android:textStyle="bold"
       android:id="@+id/textView"
       android:layout_below="@+id/imageView2"
       android:layout_toEndOf="@+id/imageView1"
       android:layout_marginStart="18dp" />
   <ImageView
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:layout_weight="1"
       android:src="@drawable/sharpner"
       android:layout_marginEnd="15dp"
       android:layout_below="@+id/imageView1"
       android:layout_alignEnd="@+id/textView"
       android:id="@+id/imageView12" />

 </LinearLayout>
  <Button
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="RESTART"
      android:onClick="reload"
      android:layout_gravity="center|bottom"
      android:layout_below="@+id/linearLayout"
      android:layout_toStartOf="@+id/imageView1" />
</RelativeLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:id="@+id/ll"
      android:visibility="gone">

    <TextView
        android:id="@+id/winner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Player X \n  WON \n   the \n GAME"
        android:textColor="#060606"
        android:textSize="70dp"
        android:textStyle="bold" />


  </LinearLayout>
</RelativeLayout>